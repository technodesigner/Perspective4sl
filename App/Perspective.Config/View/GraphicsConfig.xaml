<navigation:Page x:Class="Perspective.Config.View.GraphicsConfig" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480">
    <StackPanel VerticalAlignment="Center">
        <Button 
            Name="fullScreenButton" 
            Content="{Binding Path=GraphicsConfig_FullScreen}"
            Width="120"
            Height="35"
            Click="fullScreenButton_Click"/>
        <CheckBox 
            Name="cacheVisualizationCheckBox" 
            Content="EnableCacheVisualization"
            HorizontalAlignment="Center"
            Checked="cacheVisualizationCheckBox_Checked"/>
    </StackPanel>
</navigation:Page>
