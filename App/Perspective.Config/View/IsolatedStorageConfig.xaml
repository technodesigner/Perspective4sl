<navigation:Page 
    x:Class="Perspective.Config.View.IsolatedStorageConfig" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
    d:DesignWidth="640" d:DesignHeight="480"
    Title="IsolatedStorageConfig Page">
    <StackPanel>
        <Button 
            Name="increaseQuotaBy1MoButton" 
            Content="Quota + 1 Mo" 
            Click="increaseQuotaBy1MoButton_Click" />
        <Button 
            Style="{StaticResource GlassButtonStyle}" 
            Name="increaseQuotaBy5MoButton" 
            Content="Quota + 4 Mo" 
            Click="increaseQuotaBy5MoButton_Click" />
    </StackPanel>
</navigation:Page>
